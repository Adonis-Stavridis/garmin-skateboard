<layout id="MainLayout">
    <bitmap
        id="Icon"
        filename="../images/skateboard.png"
        x="center"
        y="12%"
    />

    <label
        id="Duration"
        text="0:00"
        x="center"
        y="center"
        font="Graphics.FONT_SYSTEM_NUMBER_THAI_HOT"
        color="Graphics.COLOR_WHITE"
        justification="Graphics.TEXT_JUSTIFY_CENTER"
    />

    <label
        id="Clock"
        x="center"
        y="75%"
        font="Graphics.FONT_SYSTEM_SMALL"
        color="Graphics.COLOR_WHITE"
        justification="Graphics.TEXT_JUSTIFY_CENTER"
    />
</layout>
